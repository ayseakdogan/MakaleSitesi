@using CVTemplate.Controllers

@model AllTables
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title> @(Model.lstKisi.FirstOrDefault().ad + " " + Model.lstKisi.FirstOrDefault().soyad)  </title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="CV, Portfolio, Resume">
    <meta name="author" content="Md. Siful Islam, Desiver Web">
    <link rel="icon" href="/Content/assets/images/favicon.ico">
    <link rel="apple-touch-icon" sizes="72x72" href="/Content/assets/images/apple-icon-72x72.png">
    <link rel="apple-touch-icon" sizes="76x76" href="/Content/assets/images/apple-icon-76x76.html">
    <link rel="apple-touch-icon" sizes="114x114" href="/Content/assets/images/apple-icon-114x114.png">
    <link href="/Content/assets/css/materialize.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/Content/assets/css/animate.css">
    <link href='http://fonts.googleapis.com/css?family=Roboto:400,100,300,700,400italic,700italic' rel='stylesheet' type='text/css'>

    <link href="/Content/assets/icons/font-awesome-4.1.0/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="/Content/assets/css/style.css" rel="stylesheet">
    <link href="/Content/assets/css/responsive.css" rel="stylesheet">
    <link rel="alternate stylesheet" href="/Content/assets/css/colors/red.css" title="red">
    <link rel="alternate stylesheet" href="/Content/assets/css/colors/purple.css" title="purple">
    <link rel="alternate stylesheet" href="/Content/assets/css/colors/orange.css" title="orange">
    <link rel="alternate stylesheet" href="/Content/assets/css/colors/green.css" title="green">
    <link rel="stylesheet" href="/Content/assets/css/colors/lime.css" title="lime">
    <link rel="stylesheet" href="/Content/assets/css/demo.css">
</head>
<body>
    <div class="container">
        <div class="row">
            @Html.Partial("~/Views/Shared/_LeftMenu.cshtml", Model)
            <section class="col s12 m12 l8 section">
                <div class="row">
                    <div class="blog">
                        @foreach (var item in Model.lstBlog)
                        {
                            <div class="col s12 m12 l6 blog-post">
                                <div class="thumbnail z-depth-1">
                                    <a href="/Home/BlogFullPost/@item.id">
                                        <img src="@Model.secResim.resimYol" alt="" class="responsive-img">
                                    </a>
                                    <div class="blog-details">
                                        <div class="post-title" id="blog-post-@item.id">
                                            <a href="/Home/BlogFullPost/@item.id">
                                                <h2>@item.baslik</h2>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <br />
                        }
                    </div>
                </div>
            </section>
        </div>
    </div>
    <script src="/Content/assets/js/jquery.min.js"></script>
    <script src="/Content/assets/js/materialize.min.js"></script>
    <script src="/Content/assets/js/wow.min.js"></script>
    <script src="http://maps.googleapis.com/maps/api/js?v=3.exp"></script>
    <script src="/Content/assets/js/masonry.pkgd.js"></script>
    <script src="/Content/assets/js/validator.min.js"></script>
    <script src="/Content/assets/js/init.js"></script>
    <script src="/Content/assets/js/styleswitcher.js"></script>
    <div class="cv-style-switch" id="switch-style">
        <a id="toggle-switcher" class="switch-button icon_tools"> <i class="fa fa-cogs"></i></a>
        <div class="switched-options">
            <div class="config-title">
                Colors :
            </div>
            <ul class="styles">
                <li>
                    <a href="index.html#" onclick="setActiveStyleSheet('red'); return false;" title="Red">
                        <div class="red"></div>
                    </a>
                </li>

                <li>
                    <a href="index.html#" onclick="setActiveStyleSheet('purple'); return false;" title="purple">
                        <div class="purple"></div>
                    </a>
                </li>

                <li>
                    <a href="index.html#" onclick="setActiveStyleSheet('orange'); return false;" title="orange">
                        <div class="orange"></div>
                    </a>
                </li>

                <li>
                    <a href="index.html#" onclick="setActiveStyleSheet('green'); return false;" title="green">
                        <div class="green"></div>
                    </a>
                </li>

                <li>
                    <a href="index.html#" onclick="setActiveStyleSheet('lime'); return false;" title="lime">
                        <div class="lime"></div>
                    </a>
                </li>

                <li class="p">
                    ( NOTE: Pre Defined Colors. You can change colors very easily )
                </li>
            </ul>
        </div>
    </div>
</body>
</html>

