@*@using CVTemplate.Controller*@

@model  CVTemplate.Controllers.AdminController.AllTables2
@{
     ViewBag.Title = "Admin Panel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <br />
<h2>Kişi Güncelle</h2>
<hr />

    @using (Html.BeginForm("KisiGuncelle", "Admin"))
    {
        <div class="form-group">
            <label for="exampleFormControlInput1">Ad</label>
            <input type="text" class="form-control" id="exampleFormControlInput1" name="ad" value="@Model.tekkisi.ad">
        </div>
        <div class="form-group">
            <label for="exampleFormControlInput1">Soyad</label>
            <input type="text" class="form-control" id="exampleFormControlInput2" name="soyad" value="@Model.tekkisi.soyad">
        </div>
        <div class="form-group">
            <label for="exampleFormControlInput1">Meslek</label>
            <input type="text" class="form-control" id="exampleFormControlInput2" name="meslek" value="@Model.tekkisi.meslek">
        </div>
        <div class="form-group">
            <label for="exampleFormControlInput1">Telefon Numarası</label>
            <input type="text" class="form-control" id="exampleFormControlInput2" name="telefon" value="@Model.tekkisi.telefon">
        </div>
        <div class="form-group">
            <label for="exampleFormControlInput1">Email</label>
            <input type="text" class="form-control" id="exampleFormControlInput2" name="mail" value="@Model.tekkisi.mail">
        </div>
        <div class="form-group">
            <label for="exampleFormControlInput1">Adress</label>
            <input type="text" class="form-control" id="exampleFormControlInput2" name="adres" value="@Model.tekkisi.adress">
        </div>
        <div class="form-group">
            <label for="exampleFormControlInput1">Özet Bilgi</label>
            <textarea rows="20" cols="100" name="ozetBilgi" class="form-control">@Model.tekkisi.ozetBilgi</textarea>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary mb-2">Güncelle</button>
        </div>

    }
