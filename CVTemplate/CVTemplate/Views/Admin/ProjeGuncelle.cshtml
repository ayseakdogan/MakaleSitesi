

@{
     ViewBag.Title = "Admin Panel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model CVTemplate.Controllers.AdminController.AllTables2
    <br />
<h2>Proje Güncelle</h2>

<br />

@using (Html.BeginForm("ProjeGuncelle", "Admin"))
{
    <div class="form-group">
        <label for="exampleFormControlSelect1">Proje Kategori</label>
        <select class="form-control" id="exampleFormControlSelect1" name="projekategori">
            @foreach (var item in Model.lstProjeCategory)
            {
                if (item.id == Model.secilenProje.CategoryID)
                {
                    <option selected value="@item.id"> @item.baslik </option>
                }

                else
                {
                    <option value="@item.id"> @item.baslik </option>
                }

            }
        </select>
    </div>
    <div class="form-group">
        <label for="exampleFormControlInput1">Proje Başlık</label>
        <input type="text" class="form-control" id="exampleFormControlInput2" name="projebaslik" value="@Model.secilenProje.altBaslik">
    </div>
    <div class="form-group">
        <label for="exampleFormControlInput1">Proje Yılı</label>
        <input type="text" class="form-control" id="exampleFormControlInput2" name="projeyili" value="@Model.secilenProje.projeYili">
    </div>
    <div class="form-group">
        <label for="exampleFormControlInput1">Proje Linki</label>
        <input type="text" class="form-control" id="exampleFormControlInput2" name="projelink" value="@Model.secilenProje.projeLinki">
    </div>
    <div class="form-group">
        <label for="exampleFormControlInput1">Proje Açıklama</label>
    <textarea rows="10" cols="100" name="aciklama" class="form-control">@Model.secilenProje.aciklama</textarea></div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary mb-2">Ekle</button>
        </div>
    
}