
@model CVTemplate.Controllers.AdminController.AllTables2
@{
    ViewBag.Title = "Admin Panel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2>Projeler</h2>

<hr />
@Html.ActionLink("Yeni Proje Ekle", "YeniProje", "Admin", new { id = Model.secilenProjeKategori.id }, new { @class = "btn btn-success btn-xs" })


@*@Html.ActionLink("Resim Düzenle", "FileLoad", "Admin", new { id = Model.secResiim.resimNo }, new { @class = "btn btn-info btn-xs" })*@

<br />
<hr />
<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">Proje Kategorisi</th>
            <th scope="col">Proje Baslığı</th>
            <th scope="col">Proje Yılı</th>
            <th scope="col" width="20%">İşlem</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.lstProje)
        {
            <tr>

                <td>
                    @foreach (var itemm in Model.lstProjeCategory)
                    {
                        if (item.CategoryID == itemm.id)
                        {
                            @itemm.baslik
                        }
                    }
                </td>
                <td>@item.altBaslik</td>
                <td>@item.projeYili</td>
                <td>
                    @Html.ActionLink("Güncelle", "ProjeGuncelle", "Admin", new { id = item.id }, new { @class = "btn btn-warning btn-xs" })
                
                    @Html.ActionLink("Sil", "ProjeSil", "Admin", new { id = item.id}, new { @class = "btn btn-danger btn-xs" })
                </td>

            </tr>
        }
    </tbody>
</table>