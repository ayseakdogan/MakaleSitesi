@using CVTemplate.Controllers

@model AllTables
@{
    ViewBag.Title = "Admin Panel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <br />
<h3>Dil Bilgisi</h3>
<hr />
@Html.ActionLink("Yeni Dil Ekle", "YeniDil", "Admin", null, new { @class = "btn btn-success btn-xs" })
<br />

<hr />
<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">Dil Adı</th>
            <th scope="col">Yüzdesi</th>
            <th width="20%" scope="col">İşlem</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.lstDilBilgi)
        {
            <tr>
                <td>@item.konuİsmi</td>
                <td>@item.yuzdesi</td>
                <td>
                    @Html.ActionLink("Güncelle", "DilGuncelle", "Admin", new { id = item.id }, new { @class = "btn btn-warning btn-xs" })
                    @Html.ActionLink("Sil", "DilSil", "Admin", new { id = item.id }, new { @class = "btn btn-danger btn-xs" })
                </td>

            </tr>
        }
    </tbody>
</table>