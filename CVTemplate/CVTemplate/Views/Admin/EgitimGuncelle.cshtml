@model  CVTemplate.Models.Egitim
@{
    ViewBag.Title = "Admin Panel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <br />
<h2>Eğitim Güncelle</h2>
<br />

@using (Html.BeginForm("EgitimGuncelle", "Admin"))
{
    <div class="form-group">
        <label for="exampleFormControlInput1">Üniversite</label>
        <input type="text" class="form-control" id="exampleFormControlInput1" name="universite" value="@Model.Universite">
    </div>
    <div class="form-group">
        <label for="exampleFormControlInput1">Bölüm</label>
        <input type="text" class="form-control" id="exampleFormControlInput2" name="bolum" value="@Model.Bolum">
    </div>
    <div class="form-group">
        <label for="exampleFormControlInput1">Eğitim Yılı</label>
        <input type="text" class="form-control" id="exampleFormControlInput2" name="egitimyili" value="@Model.egitimYili">
    </div>
    <div class="form-group">
        <label for="exampleFormControlInput1">Açıklama</label>
        <textarea rows="10" cols="100" name="aciklama" class="form-control">@Model.Aciklama</textarea>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary mb-2">Güncelle</button>
    </div>

}
